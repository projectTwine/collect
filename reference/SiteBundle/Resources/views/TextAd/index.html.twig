{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block content -%}
    <h1>TextAd list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Displayurl</th>
                <th>Description</th>
                <th>Url</th>
                <th>Visible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('textad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.displayUrl }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.visible }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('textad_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('textad_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
