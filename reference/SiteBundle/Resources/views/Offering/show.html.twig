{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block content %}
<h1>Offering</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Startdate</th>
            <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Enddate</th>
            <td>{{ entity.endDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Exactdatesknow</th>
            <td>{{ entity.exactDatesKnow }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Modified</th>
            <td>{{ entity.modified|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('offering') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('offering_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('offering_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% include 'ClassCentralSiteBundle:Helpers:admin.links.html.twig' %}
{% endblock %}