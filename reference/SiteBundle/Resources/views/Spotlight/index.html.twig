{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block content -%}
    <h1>Spotlight list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Position</th>
                <th>Title</th>
                <th>Description</th>
                <th>Url</th>
                <th>Imageurl</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('spotlight_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.imageUrl }}</td>
                <td>{{ entity.type }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('spotlight_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('spotlight_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
