{% extends 'ClassCentralSiteBundle::base.html.twig' %}

{% block content %}
    <h1>Tag list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Count</th>

        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td><a href="/tag/{{ tag.name }}"> {{ tag.name }}</a></td>
                <td>{{ tag.courses|length }}</td>
                <td>
                    <a href="{{ path('tags_show',{id:tag.id}) }}">view</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}